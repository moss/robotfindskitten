#!/usr/bin/env ruby

$LOAD_PATH.unshift File.dirname(__FILE__) + '/../lib'

require 'windly'
require 'chargle'

WindowManager.open do |window|
  running = true
  chargle = Chargle.new
  chargle.on_press(?q, KEY_F1) { running = false }
  window.print 0, 30, "Find kitten!"
  window.print 8, 25, "@"
  while running
    ch = window.getchar()
    chargle.pressed ch
  end
end
